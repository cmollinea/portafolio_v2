---
type Props = {
  title: string;
  link: string;
  image: string;
};

const { title, link, image } = Astro.props;
---

<div
  class='bg-neutral-200/5 backdrop-blur-sm rounded-lg border border-neutral-200/10 max-w-[350px] md:max-w-md group'
>
  <div class='relative overflow-hidden'>
    <img
      src={image}
      class='h-60 md:h-64 w-full relative rounded-t-lg object-cover bottom-0 transition-transform duration-300 ease-in-out'
    />
  </div>
  <div class='p-6 relative text-lg'>
    <a href={link} class='text-xl font-bold text-red-500 hover:underline'>
      {title}
    </a>
    <p class='text-sm md:text-base pt-2'>
      <slot />
    </p>
    <a>Github</a>
    <a>What i learn</a>
  </div>
</div>
