---
import Heading from './React/Heading';
import ShortDescription from './ShortDescription.astro';
import Stack from './React/Stack';
import CtaButton from './React/CtaButton';
import ArrowRight from './icons/ArrowRight';
import MotionArrow from './React/Arrow';
import { MotionHero } from './React/MotionHero';
---

<MotionHero client:load>
  <div
    class='flex flex-col w-fit h-fit col-span-6 2xl:col-span-12 bg-gradient-to-tr'
  >
    <Heading />

    <Stack />

    <ShortDescription />

    <CtaButton />
  </div>
  <MotionArrow>
    <ArrowRight
      className='text-neutral-500 rotate-90 scale-110 animate-pulse'
    />
  </MotionArrow>
</MotionHero>

<script>
  let scrollHook = document.getElementById('scroll-hook');

  function hideHook() {
    if (window.scrollY >= 300) {
      scrollHook?.classList.add('hidden');
      console.log('aaaaaaaaa');
      window.removeEventListener('scroll', hideHook);
    }
  }

  window.addEventListener('scroll', hideHook);
</script>
